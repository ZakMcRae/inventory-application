extends layout 

block content
    h1= title

    div
        form(action="" method="POST")
            label(for='name') Name: 
            input(type='text', name='name', value=(category === undefined ? '': category.name))
            
            label(for='description') Description: 
            input(type='text', name='description', value=(category === undefined  ? '': category.description))

            button(type='submit') Submit

        if errors 
            ul 
                for error in errors
                    li!= error.msg