extends layout

block content
    div
        h1= title
        div.distillery-list
            if (distilleries)
                for distillery in distilleries
                    div.distillery-card
                        h4 
                            a(href=distillery.url) #{distillery.name}
                        p= distillery.location
            else 
                p There are no distilleries! 

        div.add-section
            h2 Is your favourite distillery missing?
            a(href='/distillery/create' class='add-button button') Add New Distillery