extends layout

block content
    div
        h1= title
        div.category-list
            if (categories)
                for category in categories
                    div.category-card
                        div.upper-category-card
                            h4 
                                a(href=category.url) #{category.name}
                            p= category.description
            else 
                p There are no categories!
        
        div.add-section
            h2 Looking for a specific Category?
            a(href='/category/create' class='button') Add New Category